@model IEnumerable<Instructor>

@{
    ViewData["Title"] = "Index";
    
}

<h1>Index</h1>

<p>
    @*<a class="btn btn-info" asp-action="Create">Registrar</a>*@
    <a class="btn btn-info" asp-controller="Home" asp-action="Create">Registrar</a>

</p>
<table id="Instructors"class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.InstructorId">Edit</a> |
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.InstructorId">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.InstructorId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
